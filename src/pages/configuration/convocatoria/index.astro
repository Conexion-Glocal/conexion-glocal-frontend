---
import BaseLayout from "@layouts/BaseLayout.astro";

---
<BaseLayout>
  <!-- Contenedor superior con título y buscador -->
  <div
  class="flex flex-col sm:flex-row items-center justify-between mb-6 space-y-4 sm:space-y-0 w-full"
>
  <!-- Título de la sección y buscador -->
  <div class="flex flex-col w-full space-y-4 sm:flex-row sm:space-x-4">
      <h3
          class="text-xl font-semibold text-gray-800 whitespace-nowrap sm:w-auto"
      >
          Tipos de Convocatorias (1)
      </h3>

      <!-- Buscador -->
      <div class="relative w-full">
          <input
              type="text"
              placeholder="Buscar tipos de convocatorias"
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-full shadow-sm focus:ring focus:border-transparent"
          />
          <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              class="w-5 h-5 text-gray-500 absolute left-3 top-2.5"
          >
              <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M21 21l-4.35-4.35m0 0a7.5 7.5 0 111.768-1.768L21 21z"
              ></path>
          </svg>
      </div>
  </div>

  <!-- Botón crear tipo -->
  <div class="flex justify-center items-center sm:ml-4">
      <a href="convocation/create"
          class="flex flex-col items-center justify-center w-28 h-28 bg-white border-2 border-gray-300 rounded-lg shadow-sm hover:shadow-lg transition-shadow duration-200"
      >
          <img
              src="/src/icons/shared/add.svg"
              alt="Añadir"
              class="w-10 h-10 mb-2"
          />
          <span class="text-green-700 text-base font-semibold">
              Crear tipo
          </span>
      </a>
  </div>
</div>

<!-- Acordeón con la tabla -->
<div class="flex w-full flex-col gap-4 text-neutral-600 mt-4">
  <div
      x-data="{ isExpanded: false }"
      class="divide-y divide-neutral-300 overflow-hidden rounded-xl border border-neutral-300 bg-neutral-50/40"
  >
      <!-- Botón del acordeón con thead de la tabla -->
      <button
          id="controlsAccordionItemOne"
          type="button"
          class="flex w-full items-center justify-between gap-2 bg-neutral-50 p-4 text-left underline-offset-2 hover:bg-neutral-50/75 focus-visible:bg-neutral-50/75 focus-visible:underline focus-visible:outline-none text-lg font-semibold"
          aria-controls="accordionItemOne"
          @click="isExpanded = !isExpanded"
          :class="isExpanded ? 'text-neutral-800 font-bold' : 'text-neutral-600 font-medium'"
          :aria-expanded="isExpanded ? 'true' : 'false'"
      >
          <table class="min-w-full rounded-lg">
              <thead>
                  <tr class="text-left border-b">
                      <th class="py-2 px-4 font-semibold text-gray-800"
                          >Nombre</th
                      >
                      <th class="py-2 px-4 font-semibold text-gray-800"
                          >Descripción</th
                      >
                      <th class="py-2 px-4 font-semibold text-gray-800"
                          >Fases</th
                      >
                      <th class="py-2 px-4 font-semibold text-gray-800"
                      ></th>
                      <th>
                          <svg
                              xmlns="http://www.w3.org/2000/svg"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke-width="2"
                              stroke="currentColor"
                              class="w-5 h-5 shrink-0 transition"
                              aria-hidden="true"
                              :class="isExpanded ? 'rotate-180' : ''"
                          >
                              <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                          </svg>
                      </th>
                  </tr>
              </thead>
          </table>
      </button>

      <!-- Contenido del acordeón, incluyendo el tbody -->
      <div
          x-cloak
          x-show="isExpanded"
          id="accordionItemOne"
          role="region"
          aria-labelledby="controlsAccordionItemOne"
          x-collapse
      >
          <div class="p-4 text-sm sm:text-base text-pretty">
              <!-- Tabla ajustada dentro del acordeón -->
              <div class="overflow-x-auto">
                  <table class="min-w-full bg-white shadow-md rounded-lg">
                      <tbody>
                          <tr class="border-b">
                              <td
                                  class="py-2 px-4 max-w-24 font-medium text-gray-800"
                                  >Convocatoria Entrante</td
                              >
                              <td class="py-2 px-4 max-w-28 text-gray-600"
                                  >Este tipo de convocatoria está diseñado
                                  para las movilidades en las que
                                  estudiantes, profesores y
                                  administrativos de otras universidades
                                  se integran durante un periodo de tiempo
                                  a la Universidad de Manizales.</td
                              >
                              <td
                                  class="py-2 px-4 text-center font-semibold text-black"
                                  >2</td
                              >
                              <td class="py-2 px-4 text-right">
                                  <button
                                      class="px-4 py-1 bg-green-700 text-white rounded-lg hover:bg-green-900"
                                      >Editar</button
                                  >
                              </td>
                          </tr>
                      </tbody>
                  </table>
              </div>
          </div>
      </div>
  </div>
</div>
</BaseLayout>