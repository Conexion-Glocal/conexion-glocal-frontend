---
import LoginLayout from "@layouts/LoginLayout.astro";
---

<LoginLayout title="Recuperar contraseña">
    <div class="mt-10">
        <div>
            <form action="#" class="space-y-6" method="POST">
                <div>
                    <label
                        class="block text-sm font-medium leading-6 text-gray-900"
                        for="document">Número de documento</label
                    >
                    <div class="mt-2">
                        <input
                            autocomplete="username"
                            class="block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-950 sm:text-sm sm:leading-6"
                            id="document"
                            name="document"
                            required
                            type="text"
                        />
                    </div>
                </div>
                <div>
                    <label
                        class="block text-sm font-medium leading-6 text-gray-900"
                        for="confirm-document"
                        >Confirma el número de documento</label
                    >
                    <div class="mt-2">
                        <input
                            autocomplete="username"
                            class="block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-emerald-950 sm:text-sm sm:leading-6"
                            id="confirm-document"
                            name="confirm-document"
                            required
                            type="text"
                        />
                    </div>
                </div>
                <div class="flex items-center justify-end">
                    <div class="text-sm leading-6">
                        <a
                            class="font-semibold text-emerald-950 hover:text-emerald-700"
                            href={`${import.meta.env.SITE}`}>Regresar</a
                        >
                    </div>
                </div>
                <div>
                    <button
                        class="flex w-full justify-center rounded-md bg-emerald-950 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-emerald-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-950"
                        type="submit"
                        >Continuar
                    </button>
                </div>
            </form>
        </div>
    </div>
</LoginLayout>
