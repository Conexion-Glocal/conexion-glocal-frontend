    x-data="() => {return {
            users: [],
            getData() {
                fetch('https://jsonplaceholder.typicode.com/users')
                    .then((response) => response.json())
                    .then((data) => {
                        this.users = data;
                    });
            },
        };}"
    x-init="getData()"
>
