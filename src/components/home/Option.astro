---
import { Icon } from "astro-icon/components";

const {
    info: { classList, description, icon, name, url },
} = Astro.props;
---

<div
    class="group relative rounded-tl-lg rounded-tr-lg bg-white p-6 focus-within:ring-2 focus-within:ring-inset focus-within:ring-emerald-700 sm:rounded-tr-none"
>
    <div>
        <span class={`inline-flex rounded-lg ring-4 ring-white ${classList}`}>
            <Icon name={icon} size={24} />
        </span>
    </div>
    <div class="mt-8">
        <h3 class="text-base font-semibold leading-6 text-gray-900">
            <a href={url} class="focus:outline-none">
                <span class="absolute inset-0"></span>
                {name}
            </a>
        </h3>
        <p class="mt-2 text-sm text-gray-500">
            {description}
        </p>
    </div>
    <span
        class="pointer-events-none absolute right-6 top-6 text-gray-300 group-hover:text-gray-400"
    >
        <Icon name="shared/arrow-up-right" size={32} />
    </span>
</div>
