---
import { Icon } from "astro-icon/components";

const { endpoint } = Astro.props;
---

<div class="flex h-full flex-col overflow-y-scroll bg-white shadow-xl">
    <div class="bg-emerald-700 px-4 py-6 sm:px-6">
        <div class="flex items-center justify-between">
            <h2
                class="text-base font-semibold leading-6 text-amber-50"
                x-text="name"
            >
            </h2>
            <div class="ml-3 flex h-7 items-center">
                <button
                    class="relative rounded-md bg-emerald-700 text-white focus:outline-none focus:ring-2 focus:ring-white"
                    type="button"
                    @click="isInfoDrawerOpen = false"
                >
                    <span class="absolute -inset-2.5"></span>
                    <Icon class="h-6 w-6" name="shared/close" />
                </button>
            </div>
        </div>
        <div class="mt-1">
            <p class="text-sm text-white"></p>
        </div>
    </div>
    <div class="relative flex-1 px-4 py-6 sm:px-6">
        <div class="mb-5 text-center">
            <img
                class="inline-block h-48 w-48 rounded-full"
                x-bind:alt="name"
                x-bind:src="image"
            />
        </div>
        <p x-text="description"></p>
        <p class="font-semibold mt-5">Tipo de plantilla: <span class="font-normal" x-text="template_type_name"></span></p>
    </div>
</div>
