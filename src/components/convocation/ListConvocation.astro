---
import { Icon } from "astro-icon/components";

import { handleFind } from "@resources/index";

import axios from "axios";


let processType = [];
let processes = [];
let processinfo = [];
let processStudents = [];

// 1. Obtener los tipos de proceso
await axios
  .get(`${import.meta.env.PUBLIC_API_URL}process-types`)
  .then(function (response) {
    processType = response.data;
  })
  .catch(function (error) {
    console.log(error);
  });

// 2. Filtrar los tipos que son "Convocatorias" y obtener los procesos correspondientes
let processDetails = processType
  .filter(type => type.name === "Convocatorias") // Filtrar solo "Convocatorias"
  .map((type) => {
    return axios
      .get(`${import.meta.env.PUBLIC_API_URL}processes/process-type/${type.id}`) // Obtener procesos por type.id
      .then(function (response) {
        processes = processes.concat(response.data); // Aplanar los procesos en un solo array
      })
      .catch(function (error) {
        console.log(`Error fetching details for process ID: ${type.id}`, error);
      });
  });

// Esperar que todas las solicitudes de procesos finalicen
await Promise.all(processDetails);

// 3. Obtener información completa de los procesos
let processDetailsPromises = processes.map((process) => {
  return axios
    .get(`${import.meta.env.PUBLIC_API_URL}processes/complete/${process.id}`)
    .then(function (response) {
      return response.data; 
    })
    .catch(function (error) {
      console.log(`Error fetching details for process ID: ${process.id}`, error);
    });
});

// Esperar que todas las solicitudes de detalles de procesos finalicen
await Promise.all(processDetailsPromises)
  .then(function (results) {
    processinfo = results.filter(result => result !== undefined); // Filtrar resultados válidos
  })
  .catch(function (error) {
    console.log(error);
  });

// 4. Obtener los procesos con estudiantes
let processWithStudents = processes.map((process) => {
  return axios
    .get(`${import.meta.env.PUBLIC_API_URL}processes/process-with-students/${process.id}`)
    .then(function (response) {
      return response.data;
    })
    .catch(function (error) {
      console.log(`Error fetching details for process ID: ${process.id}`, error);
    });
});

// Esperar que todas las solicitudes de procesos con estudiantes finalicen
await Promise.all(processWithStudents)
  .then(function (results) {
    processStudents = results.filter(result => result !== undefined); // Filtrar resultados válidos
  })
  .catch(function (error) {
    console.log(error);
  });

console.log(processinfo)

