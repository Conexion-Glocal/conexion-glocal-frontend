---
import { ViewTransitions } from "astro:transitions";

import Favicon from "@components/shared/Favicon.astro";
import MetaTags from "@components/shared/MetaTags.astro";
const AppColorMain = import.meta.env.APP_COLOR_MAIN; 
const AppName = import.meta.env.APP_NAME;
const { title = "UManizales" } = Astro.props;
---

<!doctype html>
<html class="bg-white h-full" lang="es">
    <head>
        <MetaTags />
        <title>{`${title} | ${import.meta.env.APP_NAME}`}</title>
        <Favicon />
        <ViewTransitions />
    </head>
    <body class="h-full">
        <div class="flex min-h-full">
            <div
                class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24"
            >
                <div class="mx-auto w-full max-w-sm lg:w-96">
                    <div>
                        <h2
                            class="mt-8 text-2xl font-bold leading-9 tracking-tight text-gray-900"
                        >
                            {title}
                        </h2>
                    </div>
                    <slot />
                </div>
            </div>
            <div class=`flex flex-1 justify-center items-center h-screen bg-[${AppColorMain}]`>
               <h1 class="text-white text-4xl">{AppName}</h1>
            </div>
        </div>
    </body>
</html>
